<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="#fff"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="#0054FF"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:text="씨네마천국"
                        android:textColor="#ffffff"
                        android:textSize="24dp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_movie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_below="@+id/rl_title"
                    android:background="@drawable/main_act_gradation_blue">

                <ImageView
                        android:id="@+id/img_poster_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/image11"/>
                <RelativeLayout
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="64dp"
                        android:layout_toRightOf="@+id/img_poster_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/txt_movietitle_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="군도"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="24dp"/>
                    <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_movietitle_main"
                            android:src="@drawable/ic_15"/>
                    <TextView
                            android:id="@+id/txt_opendate_main"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="2014.07.23 개봉"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/txt_movietitle_main"/>
                    <TextView
                            android:id="@+id/txt_movieinfo_main"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="액션 / 137분"
                            android:textColor="#ffffff"
                            android:layout_below="@+id/txt_opendate_main"/>

                    <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="40dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/btn_main_act_thumb_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                        android:background="@drawable/selector_thumb_up"/>
                        <TextView
                                android:id="@+id/txt_main_act_thumb_up"
                                android:layout_marginLeft="2dp"
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:text="15"/>
                        <ImageView
                                android:id="@+id/btn_main_act_thumb_down"
                                android:layout_marginLeft="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selector_thumb_down"
                        />
                        <TextView
                                android:id="@+id/txt_main_act_thumb_down"
                                android:layout_marginLeft="2dp"
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:text="1"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/ll_movie_detail"
                    android:background="#fff"
                    android:layout_below="@+id/rl_movie_detail"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="88dp">
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="#000"
                            android:layout_alignParentTop="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예매율"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"/>
                    <TextView
                            android:textColor="#000"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5위 1.8%"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"/>
                </RelativeLayout>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EAEAEA"
                />
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="평점"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"/>
                    <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:rating="4.2"
                            android:layout_alignParentLeft="true"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_marginBottom="16dp"
                            android:layout_marginHorizontal="8dp"
                            android:stepSize="0.1"
                            android:numStars="5"
                            android:isIndicator="false"
                            android:layout_alignParentBottom="true"
                    />
                    <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="8.2"
                            android:textSize="16dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"/>
                </RelativeLayout>
                <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EAEAEA"
                />
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="누적관객수"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"/>
                    <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="839,399"
                            android:layout_marginBottom="16dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="16dp"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="#e2e2e2"
                    android:layout_below="@id/ll_movie_detail"/>
            <LinearLayout
                    android:paddingHorizontal="16dp"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:textColor="#000"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginVertical="16dp"
                        android:textStyle="bold"
                        android:text="줄거리"/>
                <TextView
                        android:textColor="#000"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="군도, 백성을 구하라!
 양반과 탐관오리들의 착취가 극에 달했던 조선 철종 13년. 힘 없는 백성의 편이 되어
 세상을 바로잡고자 하는 의적떼인 군도(群盜), 지리산 추설이 있었다.

 쌍칼 도치 vs 백성의 적 조윤
 잦은 자연재해, 기근과 관의 횡포까지 겹쳐 백성들의 삶이 날로 피폐해 져 가는 사이,
 나주 대부호의 서자로 조선 최고의 무관 출신인 조윤은 극악한 수법으로 양민들을 수탈,
 삼남지방 최고의 대부호로 성장한다. 한편 소, 돼지를 잡아 근근이 살아가던 천한 백정 돌무치는
 죽어도 잊지 못할 끔찍한 일을 당한 뒤 군도에 합류. 지리산 추설의 신 거성(新 巨星) 도치로 거듭난다.

 뭉치면 백성, 흩어지면 도적!
 망할 세상을 뒤집기 위해, 백성이 주인인 새 세상을 향해 도치를 필두로 한 군도는 백성의 적,
 조윤과 한 판 승부를 시작하는데..."/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="#e2e2e2"/>
            <LinearLayout
                    android:paddingHorizontal="16dp"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="16dp"
                          android:textColor="#000"
                          android:layout_marginVertical="16dp"
                          android:textStyle="bold"
                          android:text="감독/출연"/>
                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <TextView
                            android:textColor="#000"
                            android:id="@+id/txt_director"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="감독"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textColor="#000"
                              android:text="윤종빈"
                              android:layout_toRightOf="@+id/txt_director"
                              android:layout_marginLeft="16dp"
                              android:textSize="16dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_marginVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txt_actor"
                            android:textColor="#000"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="출연"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textColor="#000"
                              android:text="하정우(도치),강동원(조윤)"
                              android:layout_toRightOf="@+id/txt_actor"
                              android:layout_marginLeft="16dp"
                              android:textSize="16dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="#EAEAEA"/>
            <RelativeLayout
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="#fff"
                    android:paddingHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="280dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="#000"
                          android:textStyle="bold"
                          android:textSize="16dp"
                          android:text="한줄평"
                          android:layout_alignParentTop="true"
                          android:layout_alignParentLeft="true"/>

                <RelativeLayout
                        android:id="@+id/rl_write"
                        android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp"
                               android:layout_toLeftOf="@+id/txt_write"
                               android:src="@drawable/ic_review_selected"/>
                    <TextView
                            android:id="@+id/txt_write"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="작성하기"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                            android:textColor="#DB3A00"
                            android:textSize="16dp"/>
                </RelativeLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="16dp"
                          android:layout_marginTop="16dp"
                          android:layout_below="@+id/rl_write"/>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="#EAEAEA"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="#EAEAEA"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>